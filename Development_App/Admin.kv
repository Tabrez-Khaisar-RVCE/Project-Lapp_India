<Admin_Users>:

    BoxLayout:
        size_hint:None,None
        size:('600dp','480dp')
        pos_hint:{'x':0.025,'top':0.95}
        orientation:'vertical'
        spacing:'1dp'


        BoxLayout:
            spacing: '1dp'
            InputLabel:
                size_hint:None, None
                size:'80dp','36.4dp'
                text:'Available Cores'
                text:'Plant ID'

            InputLabel:
                size_hint:None, None
                size:'80dp','36.4dp'
                text:'Available Cores'
                text:'Username'

            InputLabel:
                size_hint:None, None
                size:'200dp','36.4dp'
                text:'Available Cores'
                text:'Email ID'

            InputLabel:
                size_hint:None, None
                size:'80dp','36.4dp'
                text:'Password'

            InputLabel:
                size_hint:None, None
                size:'80dp','36.4dp'
                text:'Access'

        RecycleView:
            id:tablular_tool_data
            viewclass: 'SecondaryInputLabel'
            size_hint_y:None
            height:'337dp'
            RecycleGridLayout:
                cols:5
                default_size_hint: None, None
                default_size: '80dp', '36.4dp'
                spacing:'1dp'
                size_hint_y: None
                height:self.minimum_height

        BoxLayout:
            spacing: '1dp'
            size_hint_y:None
            height:'36.4dp'

            InputLabel:
                size_hint_x:None
                width:'80dp'
                text:'Plant ID'

            InputLabel:
                size_hint_x:None
                width:'85dp'
                text:'Username'

            InputLabel:
                size_hint_x:None
                width:'200dp'
                text:'Email ID'

            InputLabel:
                size_hint_x:None
                width:'80dp'
                text:'Password'

            InputLabel:
                size_hint_x:None
                width:'80dp'
                text:'Access'

        BoxLayout:
            spacing: '1dp'
            size_hint_y:None
            height:'36.4dp'

            Spinner:
                id:User_Plant_ID
                size_hint_x:None
                width:'80dp'
                text:''
                font_size:'15dp'
                values:['8235','8261','8233','8273']

            FixedTextInput_10:
                id:User_UserName
                size_hint_x:None
                width:'85dp'
                font_size:'12dp'
                halign: 'center'
                valign: 'center'
                text_size:self.size
                text:''
                color:(0,0,0,1)
                multiline:False
                on_text_validate:User_Email_ID.focus=True

            EmailTextInput:
                id:User_Email_ID
                size_hint_x:None
                width:'200dp'
                halign: 'center'
                valign: 'center'
                text_size:self.size
                text:''
                color:(0,0,0,1)
                font_size:'12dp'
                multiline:False

            ReportTextInput:
                size_hint_x:None
                width:'80dp'
                text:'**********'
                disabled:True

            Spinner:
                id:User_Access
                size_hint_x:None
                width:'80dp'
                text:''
                values:['1','2','3']

        BoxLayout:
            size_hint_y:None
            height:'30dp'
            spacing:'5dp'

            SelectionButton:
                size_hint_x:None
                width:'100dp'
                text:'Add'
                on_release:root.add_user_details()

            SelectionButton:
                text:'Remove'
                size_hint_x:None
                width:'100dp'
                on_release:root.remove_user_details()

            SelectionButton:
                text:'Retrieve'
                size_hint_x:None
                width:'100dp'
                on_release:root.retrieve_user_details()

            SelectionButton:
                text:'Modify'
                size_hint_x:None
                width:'100dp'
                on_release:root.modify_user_details()

            ControlledLabel:
                id:err_label
                text:''
                color:(1,0,0,1)
                size_hint_x:None
                width:'350dp'
                halign: 'left'

<InputLabel@ControlledLabel>:
    unique_color:(0.5, 1, 1, 1)
    canvas.before:
        Color:
            rgba: self.unique_color
        Rectangle:
            size: self.size
            pos: self.pos

<SecondaryInputLabel@InputLabel>:
    unique_color:(0.85, 0.85, 0.85, 1)

<ControlledLabel@Label>:
    halign: 'center'
    valign: 'center'
    text_size:self.size
    text:''
    color:(0,0,0,1)
    font_size:'12dp'

<SelectionButton@Button>:
    background_color:(128/255, 30/255, 30/255, 1)
    background_normal:''
    color:(1,1,1,1)
    bold:True
    font_size:'15dp'

<ReportTextInput@FixedTextInput>:
    size_hint_x:None
    font_size:'12dp'
    halign: 'center'
    valign: 'center'
    text_size:self.size

<FixedTextInput>:
    multiline:False
    font_size:'15dp'
